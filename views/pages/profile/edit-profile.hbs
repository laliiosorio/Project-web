<div class="container">
    <div class="row justify-content-between">
        <div>
            <h1>Editar {{name}}</h1>
            <span><i class="fas fa-chevron-left"></i><a href="/profile">Mi perfil</a></span>
        </div>
    </div>
    <hr>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/profile/{{id}}/edit" method="POST" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="name">Nombre Usuario</label>
                    <input type="text" class="form-control" name="name" id="name" value="{{name}}">
                </div>

                <div class="form-group">
                    <label for="description">Sobre ti</label>
                    <input type="text" class="form-control" name="description" id="description" value="{{description}}">
                </div>

                <div class="form-group">
                    <label for="mail">Email</label>
                    <input type="text" class="form-control" name="mail" id="mail" value="{{mail}}" />
                </div>

                <div class="form-group">
                    <label>Foto Perfil:</label>
                    <input type="file" name="image" class="form-control-file" value={{image}} />
                </div>

                <button type="submit" class="btn-get-started">Guardar edici√≥n</button>

            </form>
        </div>

    </div>

</div>