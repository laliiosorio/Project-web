<div class="container">

    <div class="row justify-content-between align-items-center">
        <div class="col-md-6">
            <h1>Todas las Reseñas</h1>
        </div>
        <div class="col-md-6">
            <a href="/review/new" class="btn btn-dark">Crear nueva reseña</a>
        </div>
    </div>
    <hr>
    <br><br>

</div>
<div class="social-box">
    <div class="container">
        <div class="row">
            {{#each reviews}}

            <div class="col-lg-4 col-xs-12 text-center">
                <div class="box">
                    <i class="fas fa-map-pin fa-3x" aria-hidden="true"></i>
                    <div class="box-title">
                        <h3>{{airport.name}}</h3>
                    </div>
                    <div class="box-text">
                        <p class="card-text">{{experience.positiveExperience}}</p>
                    </div>
                    <div class="box-btn">
                        <a href="/review/{{id}}" class="card-link">Más Info</a>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</div>